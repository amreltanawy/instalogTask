// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(uuid()) @map("_id") 
  actor_id    String
  actor_name  String
  group       String
  location    String
  occurred_at DateTime
  metadata    Json

  action      EventAction @relation(fields: [action_id], references: [id])
  action_id   String
  target      User @relation(fields: [target_id], references: [id])
  target_id   String
}

model EventAction {
  id          String   @id @default(uuid()) @map("_id")
  name        String   @unique
  events      Event[]
}

model User {
  id          String   @id @default(uuid()) @map("_id")
  email       String   @unique
  name        String
  password    String
  events      Event[]
}
